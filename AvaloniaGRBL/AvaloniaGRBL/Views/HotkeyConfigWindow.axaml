<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaGRBL.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="AvaloniaGRBL.Views.HotkeyConfigWindow"
        x:DataType="vm:HotkeyConfigViewModel"
        Title="Hotkey Configuration"
        Width="700" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="{Binding Theme.MainBackground}"
        Foreground="{Binding Theme.PrimaryText}">

    <Design.DataContext>
        <vm:HotkeyConfigViewModel/>
    </Design.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Instructions -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Hotkey Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="{Binding Theme.PrimaryText}"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="13" TextWrapping="Wrap" Foreground="{Binding Theme.AccentText}"/>
            <TextBlock Text="Instructions: Select a row and press the desired key combination. Press Delete to clear a hotkey." 
                       FontSize="12" Foreground="{Binding Theme.SecondaryText}" Margin="0,5,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Hotkeys DataGrid -->
        <Border Grid.Row="1" BorderBrush="{Binding Theme.BorderColor}" BorderThickness="1" CornerRadius="4" Background="{Binding Theme.PanelBackground}">
            <DataGrid x:Name="HotkeysGrid"
                      ItemsSource="{Binding Hotkeys}"
                      SelectedItem="{Binding SelectedHotkey}"
                      IsReadOnly="True"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="{Binding Theme.PanelBackground}"
                      Foreground="{Binding Theme.PrimaryText}"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Action" 
                                        Binding="{Binding Action}" 
                                        Width="200"/>
                    <DataGridTextColumn Header="Key Combination" 
                                        Binding="{Binding KeyCombination}" 
                                        Width="180"
                                        FontFamily="Consolas, Courier New"/>
                    <DataGridTextColumn Header="Description" 
                                        Binding="{Binding Description}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,15" Spacing="10">
            <Button Content="Clear Selected" 
                    Command="{Binding ClearHotkeyCommand}"
                    Padding="15,8"
                    Background="#FF9800"
                    Foreground="White"
                    BorderThickness="0"
                    ToolTip.Tip="Clear the selected hotkey"/>
            <Button Content="Reset to Defaults" 
                    Command="{Binding ResetToDefaultsCommand}"
                    Padding="15,8"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    ToolTip.Tip="Reset all hotkeys to their default values"/>
        </StackPanel>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Save" 
                    Click="OnSaveClick"
                    Padding="20,10"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Bold"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Padding="20,10"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

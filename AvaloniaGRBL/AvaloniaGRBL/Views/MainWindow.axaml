<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaGRBL.ViewModels"
        xmlns:converters="using:AvaloniaGRBL.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="AvaloniaGRBL.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaGRBL"
        Width="1024" Height="768">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Grbl">
                <MenuItem Header="Connect..."/>
                <MenuItem Header="Disconnect"/>
                <MenuItem Header="WiFi Discovery"/>
                <Separator/>
                <MenuItem Header="Grbl Reset"/>
                <MenuItem Header="Go Home"/>
                <MenuItem Header="Unlock"/>
                <Separator/>
                <MenuItem Header="Grbl Configuration"/>
                <MenuItem Header="Settings"/>
                <MenuItem Header="Material Database"/>
                <MenuItem Header="Laser Usage Stats"/>
                <Separator/>
                <MenuItem Header="Hotkeys"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_File">
                <MenuItem Header="Open File..."/>
                <MenuItem Header="Append File..."/>
                <MenuItem Header="Re-Open File"/>
                <MenuItem Header="Save Program"/>
                <MenuItem Header="Advanced Save"/>
                <Separator/>
                <MenuItem Header="Save Project"/>
                <Separator/>
                <MenuItem Header="Send File"/>
                <MenuItem Header="Start From Position"/>
                <Separator/>
                <MenuItem Header="Run Multiple"/>
            </MenuItem>
            <MenuItem Header="_Generate">
                <MenuItem Header="Power vs Speed"/>
                <MenuItem Header="Cutting Test"/>
                <MenuItem Header="Accuracy Test"/>
                <MenuItem Header="Shake Test"/>
                <MenuItem Header="ESP8266"/>
                <MenuItem Header="Grbl Emulator"/>
            </MenuItem>
            <MenuItem Header="_Schema">
                <MenuItem Header="CAD Style"/>
                <MenuItem Header="CAD Dark"/>
                <MenuItem Header="Blue Laser"/>
                <MenuItem Header="Red Laser"/>
                <MenuItem Header="Dark"/>
                <MenuItem Header="Hacker"/>
                <MenuItem Header="Nighty"/>
            </MenuItem>
            <MenuItem Header="_Preview">
                <MenuItem Header="Auto Size"/>
                <MenuItem Header="Zoom In"/>
                <MenuItem Header="Zoom Out"/>
                <Separator/>
                <MenuItem Header="Show Laser Off Movements"/>
                <MenuItem Header="Show Executed Commands"/>
                <MenuItem Header="Show Bounding Box"/>
                <MenuItem Header="Cross Cursor"/>
            </MenuItem>
            <MenuItem Header="_Language">
                <MenuItem Header="English"/>
                <MenuItem Header="Italian"/>
                <MenuItem Header="Spanish"/>
                <MenuItem Header="French"/>
                <MenuItem Header="German"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Install CH340 Driver"/>
                <MenuItem Header="Flash Grbl Firmware"/>
                <Separator/>
                <MenuItem Header="Configuration Wizard"/>
            </MenuItem>
            <MenuItem Header="_?">
                <MenuItem Header="Auto Update"/>
                <MenuItem Header="Check Now"/>
                <Separator/>
                <MenuItem Header="Open Session Log"/>
                <MenuItem Header="Activate Extended Log"/>
                <Separator/>
                <MenuItem Header="Help Online"/>
                <MenuItem Header="About"/>
                <MenuItem Header="Facebook Community"/>
                <Separator/>
                <MenuItem Header="Donate"/>
                <MenuItem Header="License"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="5,2">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Lines: 0/0" VerticalAlignment="Center"/>
                <TextBlock Text="Buffer: 0" VerticalAlignment="Center"/>
                <ProgressBar Width="100" Height="16" Value="0" Maximum="127" VerticalAlignment="Center"/>
                <TextBlock Text="Estimated: 00:00:00" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusText, StringFormat='Status: {0}'}" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="{Binding GrblState, StringFormat='State: {0}'}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#0066CC"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area with Split View -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Connection and Jog Controls -->
            <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <!-- Connection Section -->
                    <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Connection" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                <TextBlock Text="COM Port:" VerticalAlignment="Center" Width="80"/>
                                <ComboBox Width="120" ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding SelectedPort}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
                                <TextBlock Text="Baud Rate:" VerticalAlignment="Center" Width="80"/>
                                <ComboBox Width="120" ItemsSource="{Binding AvailableBaudRates}" SelectedItem="{Binding SelectedBaudRate}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Content="{Binding IsConnected, Converter={x:Static converters:BoolToTextConverter.Instance}}" 
                                        Command="{Binding ConnectCommand}" 
                                        HorizontalAlignment="Stretch"
                                        Width="150"/>
                                <Button Content="↻" 
                                        Command="{Binding RefreshPortsCommand}" 
                                        Width="30" 
                                        ToolTip.Tip="Refresh Ports"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Jog Controls Section -->
                    <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Jog Controls" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <!-- Jog Buttons Grid -->
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*,*" Margin="0,0,0,10">
                                <!-- Top Row -->
                                <Button Grid.Row="0" Grid.Column="0" Content="↖" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogNorthWestCommand}"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="↑" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogNorthCommand}"/>
                                <Button Grid.Row="0" Grid.Column="2" Content="↗" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogNorthEastCommand}"/>
                                
                                <!-- Middle Row -->
                                <Button Grid.Row="1" Grid.Column="0" Content="←" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogWestCommand}"/>
                                <Button Grid.Row="1" Grid.Column="1" Content="⌂" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogHomeCommand}"/>
                                <Button Grid.Row="1" Grid.Column="2" Content="→" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogEastCommand}"/>
                                
                                <!-- Bottom Row -->
                                <Button Grid.Row="2" Grid.Column="0" Content="↙" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogSouthWestCommand}"/>
                                <Button Grid.Row="2" Grid.Column="1" Content="↓" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogSouthCommand}"/>
                                <Button Grid.Row="2" Grid.Column="2" Content="↘" Width="50" Height="40" 
                                        HorizontalAlignment="Center" Command="{Binding JogSouthEastCommand}"/>
                            </Grid>

                            <!-- Jog Speed -->
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="Speed:" VerticalAlignment="Center" Width="60"/>
                                <TextBox Text="{Binding JogSpeed}" Width="80"/>
                                <TextBlock Text="mm/min" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,0">
                                <TextBlock Text="Step:" VerticalAlignment="Center" Width="60"/>
                                <ComboBox Width="80" SelectedIndex="1" 
                                          ItemsSource="{Binding JogStepOptions}" 
                                          SelectedItem="{Binding JogStep}"/>
                                <TextBlock Text="mm" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Status Display -->
                            <Separator Margin="0,10"/>
                            <TextBlock Text="Status" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding GrblState}" FontSize="12" Margin="0,0,0,5"/>
                            
                            <TextBlock Text="Machine Position" FontWeight="SemiBold" FontSize="11" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding MachinePosition}" FontFamily="Courier New" FontSize="11" Margin="0,0,0,5"/>
                            
                            <TextBlock Text="Work Position" FontWeight="SemiBold" FontSize="11" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding WorkPosition}" FontFamily="Courier New" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#CCCCCC" ResizeDirection="Columns"/>

            <!-- Right Panel: Preview Area -->
            <Border Grid.Column="2" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="5">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Button Content="Open" Width="60" Command="{Binding LoadGCodeFileCommand}"/>
                            <Button Content="Start" Width="60"/>
                            <Button Content="Pause" Width="60"/>
                            <Button Content="Stop" Width="60"/>
                            <Border Width="1" Background="#CCCCCC" Margin="5,0"/>
                            <Button Content="Reset" Width="60"/>
                            <Separator/>
                            <TextBlock Text="{Binding GcodeFileName}" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Preview Canvas / Connection Log -->
                    <Border Grid.Row="1" Background="#FAFAFA" Margin="10">
                        <Grid>
                            <!-- G-Code Preview Canvas -->
                            <Border Background="White" IsVisible="{Binding !IsConnected}">
                                <Grid>
                                    <Canvas Name="PreviewCanvas" Background="White" ClipToBounds="True"/>
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" IsVisible="{Binding !HasGCodeLoaded}">
                                        <TextBlock Text="G-Code Preview Area" 
                                                 FontSize="24" Foreground="#CCCCCC" FontWeight="Light"/>
                                        <TextBlock Text="Load a G-Code file to see the preview" 
                                                 FontSize="14" Foreground="#999999" Margin="0,10,0,0"/>
                                    </StackPanel>
                                    <Border Background="#F0F0F0" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="1" 
                                            Padding="10" 
                                            VerticalAlignment="Bottom" 
                                            HorizontalAlignment="Right" 
                                            Margin="10"
                                            IsVisible="{Binding HasGCodeLoaded}">
                                        <TextBlock Text="{Binding GcodeStats}" FontFamily="Courier New" FontSize="12"/>
                                    </Border>
                                </Grid>
                            </Border>
                            
                            <!-- Connection Log -->
                            <ScrollViewer Background="White" IsVisible="{Binding IsConnected}">
                                <StackPanel Margin="10">
                                    <TextBlock Text="Connection Log" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding ConnectionLog}" 
                                             IsReadOnly="True" 
                                             TextWrapping="Wrap"
                                             FontFamily="Courier New"
                                             MinHeight="400"
                                             Background="#F5F5F5"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>

</Window>
